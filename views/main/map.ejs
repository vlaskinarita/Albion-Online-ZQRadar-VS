
<div class="container px-6 mx-auto grid">
    <div class="grid gap-6 mb-8 md:grid-cols-1 xl:grid-cols-1">
        <div class="mt-4 flex items-start p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
			<div>
				<h2 class=" text-4xl font-semibold text-gray-600 dark:text-gray-300">
					Map
				</h2>
			</div>
		</div>

        <div class="flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
            <div>
                <label class="flex items-center space-x-2">
                    <input type="checkbox" id = "settingShowMap" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                    <span class="dark:text-white ml-4">Show map background</span>
                </label>
            </div>
        </div>
    </div>
</div>
<script>
     function returnLocalBool(item) {
        if (localStorage.getItem(item) == "true")
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    let settingShowMap = document.getElementById("settingShowMap");

    settingShowMap.checked = returnLocalBool("settingShowMap");

    settingShowMap.addEventListener("click", () => {
        localStorage.setItem("settingShowMap", settingShowMap.checked);
    });

</script>